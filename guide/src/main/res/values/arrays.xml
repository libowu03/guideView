<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--高亮控件属性-->
    <declare-styleable name="GuideView">
        <attr name="maskColor" format="color"/>
        <attr name="openMore" format="boolean"/>
        <attr name="clickExact" format="boolean"/>
        <attr name="heightLightPadding" format="dimension"/>
        <attr name="guideTextColor" format="color"/>
        <attr name="guideTextSize" format="dimension"/>
    </declare-styleable>

    <!--pagerCard控件属性-->
    <declare-styleable name="PagerCardView">
        <attr name="pagerCardTextColor" format="color"/>
        <attr name="pagerCardTextSize" format="dimension"/>
        <attr name="seIndicatorColor" format="color"/>
        <attr name="unSeIndicatorColor" format="color"/>
        <attr name="indicatorWidth" format="dimension"/>
        <attr name="indicatorHeight" format="dimension"/>
        <attr name="pagerCardImgHeight" format="dimension"/>
        <attr name="pagerCardImgWidth" format="dimension"/>
        <attr name="pagerCardRedPointTextSize" format="dimension"/>
        <attr name="pagerCardRedPointTextColor" format="color"/>
        <attr name="pagerCardRedPointHeight" format="dimension"/>
        <attr name="pagerCardRedPointWidth" format="dimension"/>
        <attr name="pagerCardRedPointColor" format="color"/>
        <attr name="needIndicator" format="boolean"/>
        <attr name="itemDecorationColor" format="color"/>
        <attr name="itemDecorationWeight" format="dimension"/>
        <attr name="pagerCardImgType">
            <enum name="CIRCLE" value="0"/>
            <enum name="ROUND_RECT" value="1"/>
            <enum name="RECT" value="2"/>
        </attr>
        <attr name="canScrollVertically" format="boolean"/>
        <attr name="imgCorner" format="dimension"/>
    </declare-styleable>
</resources>