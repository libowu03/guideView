<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kit.calendar.CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:currentMonthDayTextColor="@color/colorRed"
        app:currentMonthFestivalTextColor="@color/colorRed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:selectToday="false"
        app:headWeekTextColor="@color/colorRed"
        app:notCurrentMonthDayTextColor="@color/colorPrimary"
        app:notCurrentMonthFestivalTextColor="@color/colorPrimary" />
</android.support.constraint.ConstraintLayout>