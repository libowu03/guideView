<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal">

    <com.kit.calendar.view.CalendarView
        android:id="@+id/calendar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:enableFootLayout="true"
        android:padding="10dp"
        app:enableItemClick="true"
        app:selectTodayDayTextColor="@color/colorRed"
        app:selectTodayFestivalTextColor="@color/colorRed"
        app:holidayTipTextColor="#232323"
        tools:layout_editor_absoluteX="0dp" />

</LinearLayout>