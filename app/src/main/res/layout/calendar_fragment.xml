<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.kit.calendar.view.CalendarView
        android:id="@+id/calendar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        app:enableCalendarScroll="true"
        app:enableFootLayout="false"
        app:enableItemClick="false"
        app:holidayTipTextColor="#FF69B4"
        app:selectToday="true"
        app:enableHeadLayout="true"
        app:currentMonthDayTextColor="@color/colorTitle"
        app:currentMonthFestivalTextColor="#8B8B83"
        app:notCurrentMonthDayTextColor="#AAAAAA"
        app:notCurrentMonthFestivalTextColor="#AAAAAA"
        app:headWeekTextColor="@color/colorTitle"
        app:selectTodayDayTextColor="@color/colorPrimary"
        app:selectTodayFestivalTextColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="0dp" />

</LinearLayout>