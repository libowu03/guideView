<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
   <com.kit.superTab.SuperTabView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       app:tabSelectTextColor="@color/colorAccent"
       app:tabUnselectTextColor="@color/colorTitle"
       app:tabClickNoScroll="false"
       app:tabIndicatorMarginTop="10dp"
       app:tabIndicatorWidth="10dp"
       app:tabIndicatorHeight="2dp"
       app:tabSelectTextStyle="normal"
       app:tabTextMargin="5dp"
        android:id="@+id/a" />
   <androidx.viewpager.widget.ViewPager
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/pager" />
</LinearLayout>
