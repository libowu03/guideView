<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.guide.PagerCardTestActivity"
    android:orientation="vertical">
    <com.kit.pagerCard.PagerCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview"
        app:pagerCardRedPointColor="@color/colorRed"
        app:pagerCardRedPointHeight="5dp"
        app:pagerCardRedPointWidth="5dp"
        app:pagerCardImgType="ROUND_RECT"
        app:imgCorner="10dp"/>
    <com.kit.pagerCard.PagerCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardviewTwo" />

    <com.kit.pagerCard.PagerCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardviewThree"/>
</LinearLayout>
