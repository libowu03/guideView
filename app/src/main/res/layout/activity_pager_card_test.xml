<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.guide.PagerCardTestActivity">
    <com.kit.pagerCard.PagerCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:id="@+id/cardview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:pagerCardImgWidth="45dp"
        app:pagerCardImgHeight="45dp"
        app:seIndicatorColor="#320053"
        app:unSeIndicatorColor="#949097"
        app:pagerCardTextColor="@color/colorAccent"
        app:pagerCardTextSize="12dp"
        app:indicatorHeight="5dp"
        app:indicatorWidth="5dp"
        app:pagerCardImgType="ROUND_RECT"
        app:imgCorner="16dp"
        app:itemMargin="0dp"
        app:canScrollVertically="false"
        android:background="@color/white"
        android:paddingBottom="6dp"/>
</android.support.constraint.ConstraintLayout>
