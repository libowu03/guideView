<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.guide.PagerCardTestActivity"
    android:orientation="vertical">
    <com.kit.pagerCard.PagerCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:pagerCardImgWidth="45dp"
        app:pagerCardImgHeight="45dp"
        app:seIndicatorColor="#320053"
        app:unSeIndicatorColor="#949097"
        app:pagerCardTextColor="@color/colorAccent"
        app:pagerCardTextSize="12dp"
        app:indicatorHeight="5dp"
        app:indicatorWidth="5dp"
        app:pagerCardImgType="ROUND_RECT"
        app:imgCorner="16dp"
        app:itemMargin="20dp"
        app:enableInfinite="true"
        android:background="@color/transparent"
        app:itemBg="@color/transparent"
        android:paddingBottom="6dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="减"
        android:id="@+id/update"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加"
        android:id="@+id/pro"/>
</LinearLayout>
